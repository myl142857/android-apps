<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent" android:padding="10px"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/nameLabel" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3px" 
		android:text="Name" />
			
	<EditText android:id="@+id/name" 
	  	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/nameLabel" 
		android:layout_weight="1"/>	
		
	<TextView android:id="@+id/phoneLabel" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/name"
		android:padding="3px" 
		android:text="Phone" />
		
	<EditText android:id="@+id/phone" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/phoneLabel"
		android:layout_weight="1"/>
		
	<TextView android:id="@+id/emailLabel" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/phone"
		android:padding="3px" 
		android:text="E-mail" />
		
	<EditText android:id="@+id/email" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/emailLabel"
		android:layout_weight="1"/>
	
	<Button android:id="@+id/confirm" 
	  	android:text="Save"
	  	android:layout_below="@id/email"
	  	android:layout_alignParentRight="true"
		android:layout_width="75px"
		android:layout_height="wrap_content" />
		
	<Button android:id="@+id/delete"
		android:text="Delete"
		android:layout_below="@id/email"
		android:layout_width="75px"
		android:layout_height="wrap_content" />
	
</RelativeLayout>